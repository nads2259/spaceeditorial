<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # Optional: redirect root requests to a separate frontend host when FRONTEND_HOME is provided.
    RewriteCond %{ENV:FRONTEND_HOME} !^$
    RewriteCond %{REQUEST_URI} ^/?$
    RewriteRule ^ %{ENV:FRONTEND_HOME} [R=302,L]

    RewriteCond %{REQUEST_FILENAME} -d [OR]
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    RewriteRule ^ index.php [L]
</IfModule>
